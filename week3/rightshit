#include<stdio.h>
unsigned int rightshift (unsigned int x, unsigned int n)
{
	for(int i=0;i<=n;i++)
	{
		if(x%2==0)
		{
			x=x>>1;
		}
		else
		{
			x=x>>1;
			x=x+(1<<31);
		}
	}
	return x;
}
void main()
{
	unsigned int x,n,r;
	printf("Enter the number\n");
	scanf("%u",&x);
	printf("Enter no. of times to the number has to be repeated\n");
	scanf("%u",&n);
	r = rightshift(x,n);
	printf("The rotated number is\n");
	printf("%u",r);
}
