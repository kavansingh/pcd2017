#include<stdio.h>
typedef struct{
    float real;
    float imaginary;
}complex;
complex number;
float compreal(float a,float c){
    number.real=a+c;
    return number.real;
                  }
float compimg(float b,float d){
    number.imaginary=b+d;
    return number.imaginary;    
}

int main(){
    float a,b,c,d;
    printf("enter real and imaginary part of the first complex number:");
    scanf("%f%f",&a,&b);
    
    printf("enter real and imaginary part of the second complex number:");
    scanf("%f%f",&c,&d);
    float x = compreal(a,c);
    float y = compimg(b,d);
    
    printf("sum=%f+i%f",x,y);
    return 0;
}
